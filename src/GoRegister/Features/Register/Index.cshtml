@model GoRegister.ApplicationCore.Domain.Registration.FormModel

@using Newtonsoft.Json;

@{
    ViewData["Title"] = "MRF";

    var data = JsonConvert.SerializeObject(Model,
    new JsonSerializerSettings
    {
        ContractResolver = new Newtonsoft.Json.Serialization.CamelCasePropertyNamesContractResolver()
    });
}




<environment exclude="Development">
    <link href="/clientapp/client/css/chunk-vendors.css" asp-append-version="true" rel="stylesheet">
    <link href="/clientapp/client/css/app.css" asp-append-version="true" rel="stylesheet">
</environment>

<div id="form-app" data-model="@data"
     data-submit-url="@Url.Action("Post", "Register")"></div>

<environment include="Development">
    <script src="~/client-app/js/chunk-vendors.js"></script>
    <script src="~/client-app/js/app.js"></script>
</environment>
<environment exclude="Development">
    <script src="/clientapp/client/js/chunk-vendors.js" asp-append-version="true"></script>
    <script src="/clientapp/client/js/app.js" asp-append-version="true"></script>
</environment>
<script>
    var longUrl = new URLSearchParams(window.location.search).get("longUrl");
    window.history.replaceState({}, document.title,  longUrl);
</script>
