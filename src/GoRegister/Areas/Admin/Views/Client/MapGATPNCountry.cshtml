@model GoRegister.ApplicationCore.Domain.Clients.TPNClientGAMappingModel

<link href="/assets/vendor/codemirror/lib/codemirror.css" rel="stylesheet" />
@{ string currentAction = ViewContext.RouteData.Values["Action"].ToString(); }

@{
    string action = "";

    if (currentAction == "TPNCountryMapGA")
    {
        action = "Create";

    }
    else
    {
        action = "Edit";

    }
}

<div asp-validation-summary="All" class="text-danger"></div>

<div id="page-config" data-page="tpnclientGAMap-create-edit"></div>


<div class="card">

    <div class="card-header">
        <h3>@action TPN Client Golbal Account Manager Mapping</h3>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form id="TPNClientGAMapForm">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="ClientId" type="hidden" />
                    <input asp-for="ClientUuid" type="hidden" />
                    <input asp-for="FormAction" type="hidden" />

                    <div class="form-group">
                        <label asp-for="TPNCountry" class="control-label"> TPN Country </label>
                        <select asp-for="TPNCountry" asp-items="Model.TPNCountryList" class="form-control" id="TPNCountry">
                            <option value="">Select a TPN Country</option>
                        </select>
                        <span asp-validation-for="TPNCountry" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AdminUserId" class="control-label"> Admin </label>
                        <select asp-for="AdminUserId" asp-items="Model.AdminUserList" class="form-control" id="AdminUser">
                            <option value="">Select a admin</option>
                        </select>
                        <span asp-validation-for="AdminUserId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="GAMEmail" class="control-label"> Global Account Manager Email </label>
                        <input asp-for="GAMEmail" class="form-control" placeholder="Global Account Manager Email" id="GAMEmail" />
                        <span asp-validation-for="GAMEmail" class="text-danger"></span>
                    </div>

                    <div id="divMappingExist" class="row d-none">
                        <div class="col-md-12 d-flex justify-content-center">
                            <div class="alert alert-danger" role="alert">
                                Mapping already exists. Please try adding different mapping.
                            </div>
                        </div>
                    </div>


                    @*<div class="form-group">
                        <label asp-for="ReportFrequency" class="control-label">Report Frequency </label>
                        <select asp-for="ReportFrequency" asp-items="Model.ReportFrequencies" class="form-control" id="ReportFrequency">
                            <option value="">Select a report frequency</option>
                        </select>
                        <span asp-validation-for="ReportFrequency" class="text-danger"></span>
                    </div>*@

                    <button class="btn btn-success mt-2" type="submit">Save</button>
                    <button class="btn btn-success  mt-2" id="btnCancel" type="reset">Cancel</button>
                    <button class="btn btn-success  mt-2" id="btnGoToBack" type="button" onclick="history.back()">Go Back</button>
                </form>
            </div>
        </div>
    </div>

</div>
@section scripts
{
    <partial name="_ValidationScriptsPartial" />

}