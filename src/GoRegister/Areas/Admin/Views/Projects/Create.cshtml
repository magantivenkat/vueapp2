            <h3 class="border-bottom pt-4">Contact</h3>

           
            <div class="form-group" id="section-emailtype-client">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress"  class="form-control" placeholder="Enter client email address" required="required" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailDisplayFrom" class="control-label"></label>
                <input asp-for="EmailDisplayFrom" class="form-control" placeholder="Enter email display from name" required="required" />
                <span asp-validation-for="EmailDisplayFrom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailReplyTo" class="control-label"></label>
